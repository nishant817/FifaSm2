

<div ng-controller="fsmController">

  <div id="addScoreModal" class="modal fade" role="dialog">
    <div class="modal-dialog" role="dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">
            <span>&times;</span>
          </button>
          <h2 class="modal-title" id="addScoreModalLabel"> Add Score </h2>
        </div>
        <div class="modal-body" ng-init="fMatchDetail = []">
          <div class="container noPad">
            <table class="col-xs-12 col-md-4" style="margin:0;">
              <!--border=1 frame=void rules=rows>-->
              <tr style="border:2px solid Highlight;">@*ng-repeat="i in [0,1]"*@ 
                <td style="padding-bottom:6px;padding-top:6px;">
                  <table>
                    <tr>
                      <td colspan="4" style="text-align:right;">
                        <input ng-model="fMatchDetail.MatchDt" type="date" ng-init="fMatchDetail.MatchDt = today" value="{{fMatchDetail.MatchDt}}" />
                      </td>
                    </tr>
                    
                    <tr>
                      <td>Player 1 <span style="color:red"> *</span>: </td>
                      <td> <select ng-model="fMatchDetail.Player1" ng-options="p.Id as p.Name for p in players" class="players"></select> </td>
                      <td>Goals<span style="color:red"> *</span>: </td>
                      <td> <input ng-model="fMatchDetail.Goals1" class="goal" type="number" placeholder="0" required /> </td>
                    </tr>
                    <tr>
                      <td>Team:  </td>
                      <td colspan="3"><div custom-select="t.TId as t.FName for t in teamList | filter: { TName: $searchTerm } track by t.TId" ng-model="fMatchDetail.Team1"></div></td>
                    </tr>
                    <tr>
                      <td>Player 2 <span style="color:red"> *</span>: </td>
                      <td> <select ng-model="fMatchDetail.Player2" ng-options="p.Id as p.Name for p in players" class="players"></select> </td>
                      <td>Goals<span style="color:red"> *</span>:  </td>
                      <td> <input ng-model="fMatchDetail.Goals2" class="goal" type="number" placeholder="0" required /> </td>
                    </tr>
                    <tr>
                      <td>Team:  </td>
                      <td colspan="3"><div custom-select="t.TId as t.FName for t in teamList | filter: { TName: $searchTerm } track by t.TId" ng-model="fMatchDetail.Team2"></div></td>
                    </tr>
                  </table>
                </td>
              </tr>
            </table>
          </div>
        </div>

        <div class="modal-footer">
          <button ng-click="AddNewScores()" type="submit" class="btn btn-info btn-sm" style="font-size: 11px;">Submit</button>
          <button type="button" class="btn btn-default btn-sm" data-dismiss="modal" style="font-size: 11px;">Cancel</button>
        </div>
      </div>

    </div>
  </div>

  @*<div custom-select="s as s.name for s in states | filter: { name: $searchTerm } track by s.id" ng-model="state"></div>*@
  @*<div custom-select="t as t.TName for t in teamList | filter: { TName: $searchTerm } track by t.TId" ng-model="selectedTeam"></div>
  <div>{{selectedTeam.TId}} - {{selectedTeam.TName}}</div>*@
  
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-8 col-md-5">
        <strong>Filter: </strong><select ng-options="p as p.Name for p in playersWithAll" ng-model="filterByPlayer" ng-change="setPlayerFilter()"></select>

        <button type="button" data-toggle="modal" ng-click="fMatchDetail = {}" data-target="#addScoreModal"
                class="btn btn-warning pull-right">
          Add Score
        </button>
      </div>
    </div>
  </div>

  <br />

  <div class="container noPad">

    <table class="table table-striped" border="1" style="width:auto;">
      <thead>
        <tr>
          <th>Sl#</th>
          <th>Date</th>
          <th>Player 1</th>
          <th>Score</th>
          <th>Player 2</th>
        </tr>
      </thead>
      <tbody>
        <tr ng-repeat="score in fScores">
          <td>{{score.Id}}</td>
          @*<td><a href=""  data-toggle="modal" ng-click="fMatchDetail = score" data-target="#addScoreModal" >{{score.Id}}</a></td>*@
          <td>{{score.mdt | date: 'yyyy-MM-dd'}}</td>
          <td class="{{score.s1}}">{{score.n1}} <span ng-show="score.Team1 > 0">({{teamList[score.Team1-1].TName}})</span></td>
          <td>{{score.Goals1}} - {{score.Goals2}}</td>
          <td class="{{score.s2}}">{{score.n2}} <span ng-show="score.Team2 > 0">({{teamList[score.Team2-1].TName}})</span></td>
        </tr>
      </tbody>

    </table>
  </div>
</div>
