<div class="container noPad" ng-controller="fReportController">
  <br />

  <table class="table table-striped" border="1" style="width:auto;">
    <thead>
      <tr>
        @*<th>Sl #</th>*@
        <th>Name</th>
        <th>#</th>
        <th>W-D-L</th>
        <th>GF-GA</th>
        <th>PPM</th>
        <th>Win %</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="rpt in reports">
        @*<td>{{rpt.PlayerId}}</td>*@
        <td>{{rpt.PlayerName}}</td>
        <td>{{rpt.Played}}</td>
        <td class="{{rpt.wc}}" style="white-space:nowrap;">{{rpt.Won}}-{{rpt.Draw}}-{{rpt.Lost}}</td>
        <td class="{{rpt.gc}}" style="white-space:nowrap;">{{rpt.GoalShot}}-{{rpt.GoalFaced}}</td>
        <td>{{rpt.PointsPerMatch}}</td>
        <td>{{rpt.WinPc}}</td>
      </tr>
    </tbody>

  </table>
</div>